<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="supplier"
                type="com.goldenstraw.restaurant.goodsmanager.ui.recheck.util.SupplierOfTotal" />

        <variable
                name="clickEvent"
                type="com.owner.basemodule.functional.Consumer" />
    </data>


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:onClick="@{()->clickEvent.accept(supplier)}">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@{supplier.supplier}"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="20sp"
                    tools:text="供应商" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/recheck_quantity_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(supplier._sumAgainTotal)}"
                        android:textSize="20sp"
                        tools:text="100" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="-"
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/check_quantity_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(supplier._sumTotal)}"
                        android:textSize="20sp"
                        tools:text="89" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="="
                        android:textSize="20sp" />

                <TextView
                        android:id="@+id/differ_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(supplier._sumAgainTotal-supplier._sumTotal)}"
                        android:textColor="@color/common_red"
                        android:textSize="20sp"
                        tools:text="11" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>