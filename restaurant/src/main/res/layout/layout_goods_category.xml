<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
                name="category"
                type="com.goldenstraw.restaurant.goodsmanager.http.entities.GoodsCategory" />

        <variable
                name="goodsEvent"
                type="com.owner.basemodule.functional.Consumer" />

        <variable
                name="tag"
                type="Boolean" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@color/common_gray"
                android:onClick="@{()->goodsEvent.accept(category)}">

            <TextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/category_bg_selector"
                    android:gravity="center"
                    android:onClick="@{()->goodsEvent.accept(category)}"
                    android:text="@{category.categoryName}"
                    android:textColor="@drawable/category_text_selector"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="商品类别名" />

            <View
                    android:id="@+id/view"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:background="@color/common_red"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_white" />
    </LinearLayout>


</layout>