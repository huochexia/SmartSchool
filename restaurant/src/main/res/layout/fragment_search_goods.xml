<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="fragment"
                type="com.goldenstraw.restaurant.goodsmanager.ui.goods.GoodsSearchFragment" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <com.yanzhenjie.recyclerview.SwipeRecyclerView
                    android:id="@+id/rlw_search_goods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bind_recyclerView_adapter="@{fragment.adapter}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/layout_goods_item" />
        </androidx.core.widget.NestedScrollView>

        <Button
                android:id="@+id/btn_add_to_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/selector_button"
                android:onClick="@{()->fragment.addGoodsToShoppingCart()}"
                android:text="@{`加入购物车` +`(`+ fragment.viewModelGoodsTo.shoppingCartOfQuantity +`)`}"
                android:textSize="18sp" />
    </LinearLayout>
</layout>